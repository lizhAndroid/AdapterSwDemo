<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/qb_px_10">

            <TextView
                android:id="@+id/tv_test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="测测你会拿什么和魔鬼交换"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/qb_px_10" />

            <TextView
                android:id="@+id/tv_test_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="@dimen/qb_px_5"
                android:paddingBottom="5dp"
                android:text="哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/qb_px_15" />

            <TextView
                android:id="@+id/tv_test_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="26.8w人已测"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/qb_px_15" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="@dimen/qb_px_100"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

</LinearLayout>
